{
  "name": "wx-smart-files",
  "displayName": "wx-smart-files",
  "description": "vscode 自动生成小程序文件插件",
  "keywords": [
    "vscdoe",
    "plugin",
    "miniprogram",
    "wxml",
    "wxss"
  ],
  "version": "1.1.0",
  "publisher": "haodaima",
  "engines": {
    "vscode": "^1.25.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "logo.png",
  "activationEvents": [
    "onCommand:wxSmartFiles.init",
    "onCommand:wxSmartFiles.stop",
    "onCommand:wxSmartFiles.debugPage"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "wxSmartFiles.init",
        "title": "Go Start",
        "category": "wxSmartFiles"
      },
      {
        "command": "wxSmartFiles.stop",
        "title": "Stop",
        "category": "wxSmartFiles"
      },
      {
        "command": "wxSmartFiles.debugPage",
        "title": "调试该页面",
        "category": "wxSmartFiles"
      }
    ],
    "configuration": {
      "type": "obeject",
      "title": "plugin wx-smart-files config",
      "properties": {
        "wxSmartFiles.enabled": {
          "type": "boolean",
          "default": true,
          "description": "插件是否启用"
        },
        "wxSmartFiles.baseUrl": {
          "type": "string",
          "default": "",
          "description": "代码存放的根目录"
        },
        "wxSmartFiles.path": {
          "type": "string",
          "default": "pages",
          "description": "默认监听的文件夹"
        },
        "wxSmartFiles.templateDir": {
          "type": "string",
          "description": "模板存放的页面文件夹相对路径, 模板文件名必须以 template 开头，例如 template.wxss, template.wxml"
        },
        "wxSmartFiles.componentPath": {
          "type": "string",
          "default": "components",
          "description": "默认监听的自定义组件文件夹"
        },
        "wxSmartFiles.fileName": {
          "type": "string",
          "description": "自动生成文件的文件名"
        }
      }
    },
    "menus": {
      "explorer/context": [
        {
          "command": "wxSmartFiles.debugPage",
          "group": "z_commands"
        }
      ]
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^3.1.4",
    "vscode": "^1.1.25",
    "eslint": "^4.11.0",
    "@types/node": "^8.10.25",
    "@types/mocha": "^2.2.42"
  },
  "dependencies": {
    "typescript-compiler": "^1.4.1-2"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "homepage": "https://github.com/haoxinjieFE/vscode-extension-wxSmartFiles"
}
